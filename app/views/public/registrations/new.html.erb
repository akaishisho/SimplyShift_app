  <div class="container">
    <br>
    <h2>新規登録</h2>
    <br>
    <%= form_with model: @user, url: user_registration_path, local: true do |f| %>
      <%= render "public/shared/error_messages", resource: resource %>

      <div class="field">
        <%= f.label :"名前" %><br />
        <%= f.text_field :name, autofocus: true, class: "registrations-item" %>
      </div>

      <div class="field">
        <%= f.label :email %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "registrations-item" %>
      </div>

      <div class="field">
        <%= f.label :"パスワード" %>
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> 文字以上)</em>
        <% end %><br />
        <%= f.password_field :password, autocomplete: "new-password", class: "registrations-item" %>
      </div>

      <div class="field">
        <%= f.label :"パスワード確認" %><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "registrations-item" %>
      </div>
      <br>
      <div class="container">
        <div class="row justify-content-center">
         <div class="form-group">
            <div class="actions">
              <%= f.submit "登録する", class: "btn btn-success rounded-pill" %>
            </div>
          </div>
        </div>
      </div>
    <% end %>
 </div>
